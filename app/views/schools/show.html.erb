<h1><%= School.model_name.human %></h1>

<table>
  <thead>
  <tr>
    <th><%= SchoolUnity.model_name.human count: 2 %></th>
    <th><%= SchoolClass.model_name.human count: 2 %></th>
    <th><%= Teacher.model_name.human count: 2 %></th>
    <th><%= Student.model_name.human count: 2 %></th>
    <th><%= Responsible.model_name.human count: 2 %></th>
  </tr>
  </thead>

  <tbody>
  <% @school_unities.each do |school_unity| %>
      <tr>
        <td><%= school_unity.name %></td>
        <td><%= @school_class_count %></td>
        <td><%= @teacher_count %></td>
        <td><%= @student_count %></td>
        <td><%= @responsible_count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

